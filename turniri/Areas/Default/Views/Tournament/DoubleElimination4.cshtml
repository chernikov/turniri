@model turniri.Model.Tournament
<div class="main-turnir-grid gamers-rating">
    <div class="top-bar">
        <h3>Турнирная сетка
        </h3>
        <div class="bar-arrow-down sprite">
        </div>
    </div>
    <div class="gamers-list clear">
        <div class="header-wrapper">
            <div class="top-grid" style="width: @(Model.Has2SuperGameTour ? "1400px;" :"1160px;")">
                <div class="head-name">
                    1/2
                </div>
                <div class="head-name">
                    &nbsp;
                </div>
                <div class="head-name">
                    финал
                </div>
                <div class="head-name">
                    супер-финал
                </div>
                <div class="head-name">
                </div>
            </div>
        </div>
        <div class="viewport scroll-bars" style="height: 400px;">
            <div class="container" style="width: @(Model.Has2SuperGameTour ? "1640px;" :"1400px;")">
                <div class="main-table-wrapper gamers-scroll">
                    <div class="col clear">
                        <div class="tour1">
                            @{ Model.ResetMatch(); }
                            @Html.Partial("_GamePair0", Model.NextMatch)
                            @Html.Partial("_GamePair0", Model.NextMatch)
                            <div class="empty-cell">
                            </div>
                            <div class="empty-cell">
                            </div>
                        </div>
                        <div class="tour2">
                            <div class="empty-cell">
                                1/2 (нижний пул)
                            </div>
                            @Html.Partial("_GamePair0", Model.NextMatch)
                            <div class="empty-cell">
                            </div>
                        </div>
                    </div>
                    <div class="col clear">
                        <div class="tour3">
                            <div class="empty-cell">
                            </div>
                            @Html.Partial("_GamePair1", Model.NextMatch)
                            @for (int i = 0; i < 3; i++)
                            {
                                <div class="empty-cell">
                                </div>
                            }
                        </div>
                        <div class="tour4">
                            @Html.Partial("_GamePair3", Model.NextMatch)
                            <div class="empty-cell">
                            </div>
                            <div class="empty-cell">
                            </div>
                        </div>
                    </div>
                    <div class="col clear">
                        <div class="tour7">
                            <div class="game">
                                @for (int i = 0; i < 2; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                                <div class="empty-cell">
                                    <div class="game-line">
                                    </div>
                                </div>
                                @for (int i = 0; i < 2; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="tour8">
                            <div class="game">
                                @Html.Partial("_GamePair3", Model.NextMatch)
                                @for (int i = 0; i < 2; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                            </div>
                            <div class="empty-cell">
                            </div>
                        </div>
                    </div>
                    <div class="col clear">
                        <div class="tour9">
                            <div class="game">
                                @for (int i = 0; i < 2; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                                <div class="empty-cell">
                                    <div class="game-arrow-up sprite">
                                    </div>
                                </div>
                                @Html.Partial("_GamePair2", Model.NextMatch)
                                <div class="empty-cell">
                                    <div class="game-arrow-down sprite">
                                    </div>
                                    <div class="icon-medal-3 sprite">
                                    </div>
                                </div>
                                @for (int i = 0; i < 4; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    @{
                        var superFinalMatch = Model.NextMatch;
                    }
                    @if (superFinalMatch != null)
                    {
                        <div class="col clear">
                            <div class="tour19">
                                <div class="game">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        <div class="empty-cell">
                                        </div>
                                    }
                                    @Html.Partial("_GamePair4", superFinalMatch)
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <div class="empty-cell">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col clear">
                        <div class="tour19">
                            <div class="game">
                                @for (int i = 0; i < 3; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                                <div class="empty-cell">
                                    <div class="icon-medal-1 sprite">
                                    </div>
                                </div>
                                <div class="empty-cell">
                                    <div class="icon-medal-2 sprite">
                                    </div>
                                </div>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <div class="empty-cell">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
