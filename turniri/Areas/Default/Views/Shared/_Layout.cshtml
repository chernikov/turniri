@{
    var controllerName = ViewContext.RequestContext.RouteData.Values["controller"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @if (ViewBag.Keywords != null)
    {
        <meta name="keywords" content="@ViewBag.Keywords" />
    }
    else
    {
        <meta name="keywords" content="онлайн турниры, компьютерные игры, киберспорт, кибер-спорт, плейофф, fifa 13, fifa 2013, pes 13, dota 2, Fight Night Champion, Tekken Tag Tournament 2, Mortal Kombat 2011, UFC Undisputed 3, Super Street Fighter IV, HALO 4, battlefield 3" />
    }
    @if (ViewBag.Description != null)
    {
        <meta name="description" content="@ViewBag.Description" />
    }
    else
    {
        <meta name="description" content="Сайт TURNIRI.RU - это площадка, созданная для консольных и PC игроков, желающих настоящих соревнований. На сайте созданы все условия для комфортной игры с соперниками, для организации онлайн турниров а также одиночных матчей." />
    }
    <link href="@Url.Content("/Media/css/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Media/css/bbCodeEditor.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("/Media/css/jquery.jscrollpane.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Media/css/scrollbars.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Media/css/jquery-ui-1.8.14.custom.css")" rel="stylesheet" type="text/css" />
    <!--[if IE 8]><link href="@Url.Content("/Media/css/ie-main.css")" rel="stylesheet" type="text/css" /><![endif]-->
    <!--[if IE 9]><link href="@Url.Content("/Media/css/ie9-main.css")" rel="stylesheet" type="text/css" /><![endif]-->

    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic' rel='stylesheet' type='text/css'>
    <script src="@Url.Content("/Media/scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery-ui-1.8.14.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.event.drag-2.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.ba-resize.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/default/common.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/mousehold.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/aplweb.scrollbars.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.scrollto.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.jscrollpane.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.mousewheel.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.bbCodeEditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.hotkeys.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/jquery.loupe.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/default/common-chat.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/default/notice.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Media/scripts/default/money.js")" type="text/javascript"></script>

    @RenderSection("header", false)
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-33800066-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>

</head>
<body>
    <a class="chat-panel">
        <img src="/Media/images/chat.png" alt="Чат"></a>

    <div id="ChatWrapper"></div>
    <div id="PopupWrapper"></div>
    <div class="gray-background clear" style="display: none"></div>
    <div id="ErrorPopupWrapper">
    </div>
    <div class="error-gray-background clear" style="display: none"></div>

    <div class="layout" style="background-image : url('@Html.Action("Background", "Home")');">
        <div class="login-toggle">
        </div>
        <div class="top">
            @Html.Action("UserLogin", "Home")
        </div>
        <div class="header">
            <div class="logo-wrapper">
                <a href="@Url.Action("Index", "Home")" class="logo"></a>
            </div>
            @Html.Action("Menu", "Home", new { currentController = controllerName })
            <div class="top-banner-wrapper clear ads">
                <div class="left">
                    @Html.Action("Banner", "Home", new { type = (int)turniri.Model.Banner.TypeEnum.BigBanner })
                </div>
                <div class="right">
                    @Html.Action("Banner", "Home", new { type = (int)turniri.Model.Banner.TypeEnum.SmallBanner })
                </div>
            </div>
        </div>
        <div class="main">
            <div class="main-outer-wrapper">
                <div class="main-inner-wrapper clear">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
