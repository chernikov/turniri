@model turniri.Models.ViewModels.ForumView
@{
    ViewBag.Title = "Добавить тему";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}
@section header 
{
    <script type="text/javascript" src="/Media/scripts/default/create-forum-subject.js"></script>    
}

<div class="main-bootom">
    <div class="box-registration box-forum-update box">
        <div class="top-bar">
            <h3>
                ДОБАВИТЬ ТЕМУ
            </h3>
            <div class="bar-arrow-down sprite">
            </div>
        </div>
        <div class="registration-wrapper clear">
            @using (Html.BeginForm("Create", "Forum", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                 @Html.Hidden("_ID", Model._ID)
                 @Html.Hidden("UserID", Model.UserID)
                 @Html.Hidden("ParentID", Model.ParentID)
                <div class="input-item clear">
                    <div class="lable-name">
                        Заголовок*</div>
                    <div class="input">
                        @Html.TextBox("Name", Model.Name)
                    </div>
                    @Html.ValidationMessage("Name")
                </div>
                <div class="input-item clear">
                    <div class="lable-name">
                        Сообщение*</div>
                    <div class="input">
                        @Html.TextArea("Message.Message", Model.Message.Message, new {style="width : 700px;" })
                    </div>
                    @Html.ValidationMessage("Message.Message")
                </div>
                <div class="registration-button">
                    <input class="blue-28-submit" type="submit" value="НАПИСАТЬ" />
                </div>
            }
        </div>
    </div>
</div>
