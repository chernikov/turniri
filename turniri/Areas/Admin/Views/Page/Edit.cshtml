@model turniri.Models.ViewModels.PageView
@{
    ViewBag.Title = Model.ID == 0 ? "Добавить страницу" : "Изменить страницу";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/edit-page.js"></script>
}
<h2>@(Model.ID == 0 ? "Добавить страницу" : "Изменить страницу")</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "Page", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("ID", Model.ID)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Наименование</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
            </div>
        </div>
        @if (Model.ID != 0)
        {
            <div class="control-group">
                <label class="control-label">
                    Урл</label>
                <div class="controls">
                    @Html.TextBox("Url", Model.Url, new { @class = "input-xlarge" })
                </div>
            </div>
        }
        <div class="control-group">
            <label class="control-label">
                Текст</label>
            <div class="controls">
                @Html.TextArea("Text", Model.Text, new { @class = "input-xlarge html-description" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Мета-описание</label>
            <div class="controls">
                @Html.TextArea("Description", Model.Description, new { @class = "input-xlarge" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Ключевые слова</label>
            <div class="controls">
                @Html.TextArea("Keywords", Model.Keywords, new { @class = "input-xlarge" })
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
