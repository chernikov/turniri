@model turniri.Models.ViewModels.CategoryView
@{
    ViewBag.Title = "Категории";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.ID == 0 ? "Добавить категорию" : "Изменить категорию")</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    <fieldset>
        @Html.Hidden("ID", Model.ID)
        <div class="control-group">
            <label class="control-label">
                Наименование</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Name")
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}