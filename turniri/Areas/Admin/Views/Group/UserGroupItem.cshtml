@model KeyValuePair<string, turniri.Models.ViewModels.UserGroupView>

<tr class="UserGroupWrapper" data-id="@Model.Value.ID">
    <td>
        @Html.Hidden("UserGroups[" + Model.Key + "].ID", Model.Value.ID)
        @Html.Hidden("UserGroups[" + Model.Key + "].UserID", Model.Value.UserID)
        @Model.Value.UserLogin
    </td>
    <td>
        @foreach (var item in Model.Value.SelectListRoles)
        {
            <span class="btn btn-mini @(item.Selected ? "btn-primary" : "") role-switcher" data-id="@item.Value">@item.Text</span>
        }
    </td>
    <td>
        @Model.Value.SelectListStatus.FirstOrDefault(p => p.Selected).Text
    </td>
    <td>
        @if (Model.Value.Status == (int)turniri.Model.UserGroup.StatusEnum.Asked)
        {
            <div class="btn btn-primary accept-player">Принять</div>
        }
        <div class="btn btn-danger remove-line">Удалить</div>
    </td>
</tr>
