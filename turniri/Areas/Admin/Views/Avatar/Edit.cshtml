@model turniri.Models.ViewModels.ParticipantView

@{
    ViewBag.Title = "Аватар пользователя " + Model.UserLogin;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/edit-avatar.js"></script>
}
<h2>Аватар пользователя @Model.UserLogin</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "Avatar", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("ID", Model.ID)
    @Html.Hidden("TournamentID", Model.TournamentID)
    @Html.Hidden("ImagePath18", Model.ImagePath18)
    @Html.Hidden("ImagePath26", Model.ImagePath26)
    @Html.Hidden("ImagePath30", Model.ImagePath30)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Псевдоним</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Иконка </label>
            <div class="controls">
                <img src="@Model.FullImagePath30" alt="avatar" id="PreviewImage" style="@(string.IsNullOrWhiteSpace(Model.ImagePath30) ? "display:none;": "")"/>
                <br />
                <div class="btn btn-danger" id="DeletePreview">
                    удалить</div>
                <div class="btn" id="ChangePreview">
                    загрузить фото</div>
            </div>
            @Html.ValidationMessage("IconPath")
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", "Avatar", new {id = Model.TournamentID},  new { @class = "btn" })
        </div>
    </fieldset>
}

