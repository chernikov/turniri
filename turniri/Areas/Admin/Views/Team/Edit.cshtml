@model turniri.Models.ViewModels.TeamView
@{
    ViewBag.Title = Model.ID == 0 ? "Добавить команду" : "Изменить команду";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/edit-team.js"></script>
}
<h2>@(Model.ID == 0 ? "Добавить команду" : "Изменить команду")</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "Team", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("_ID", Model._ID)
    @Html.Hidden("TournamentID", Model.TournamentID)
    @Html.Hidden("ImagePath18", Model.ImagePath18)
    @Html.Hidden("ImagePath26", Model.ImagePath26)
    @Html.Hidden("ImagePath30", Model.ImagePath30)
    @Html.Hidden("CaptainID", Model.CaptainID)
    @Html.Hidden("TournamentGameID", Model.TournamentGameID)
    <fieldset>

        <div class="control-group">
            <label class="control-label">
                Название</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Name")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Аватарка</label>
            <div class="controls">
                <img src="@Model.FullImagePath30" alt="avatar" id="PreviewImage" />
                <br />
                <div class="btn btn-danger" id="DeletePreview">
                    удалить
                </div>
                <div class="btn" id="ChangePreview">
                    загрузить фото
                </div>
            </div>
            @Html.ValidationMessage("ImagePath30")
        </div>

        <div class="control-group">
            <label class="control-label" for="IsMain">
                Капитан</label>
            <div class="controls">
                @Html.TextBox("CaptainLogin", Model.CaptainLogin, new { @class = "input-xlarge" })
                @Html.ValidationMessage("CaptainName")
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, new {id = Model.TournamentID}, new { @class = "btn" })
        </div>
    </fieldset>
}
