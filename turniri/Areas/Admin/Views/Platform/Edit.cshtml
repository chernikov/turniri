@model turniri.Models.ViewModels.PlatformView

@{
    ViewBag.Title = Model.ID == 0 ? "Добавить новую игровую платформу" : "Изменить игровую платформу";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.ID == 0 ? "Добавить новую игровую платформу" : "Изменить игровую платформу")</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "Platform", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("ID", Model.ID)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Наименование</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}