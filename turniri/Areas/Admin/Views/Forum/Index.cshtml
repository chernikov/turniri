@model IEnumerable<turniri.Model.Forum>
@{
    ViewBag.Title = "Форум";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/forum-list.js"></script>
}
<h2>Форум
</h2>
@Html.ActionLink("Добавить", "Create", "Forum", null, new { @class = "btn" })

<div class="forum-list forumList">
    <div class="item forumItem null-item clear" data-id="0">
        <div class="title null-item">
            <strong>Переместить ветку в самое начало</strong>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="item forumItem" data-id="@item.ID">
            @if (item.SubForums.Any())
            {
                <div class="open"></div>
            }
            <div class="subForumItem">
            </div>
            <div class="title @(item.IsEnd ? "is-end" : "")">
               @item.Name
            </div>
            <div class="actions">
                @Html.ActionLink("Добавить", "Create", "Forum", new { id = item.ID }, new { @class = "btn" })
                @Html.ActionLink("Изменить", "Edit", "Forum", new { id = item.ID }, new { @class = "btn" })
                @Html.ActionLink("Удалить", "Delete", "Forum", new { id = item.ID }, new { @class = "btn btn-danger" })
            </div>
            <div class="sub-wrapper"></div>
        </div>
    }
</div>
