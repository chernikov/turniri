@model turniri.Models.ViewModels.NewView
@{
    ViewBag.Title = Model.ID == 0 ? "Добавить новость" : "Изменить новость";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/edit-new.js"></script>
}
<h2>@(Model.ID == 0 ? "Добавить новость" : "Изменить новость")</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "New", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("ID", Model.ID)
    @Html.Hidden("PreviewPath", Model.PreviewPath)
    @Html.Hidden("AvatarPreviewPath", Model.AvatarPreviewPath)
    @Html.Hidden("TitlePath", Model.TitlePath)
    @Html.Hidden("AvatarTitlePath", Model.AvatarTitlePath)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Тип новости</label>
            <div class="controls">
                @Html.DropDownList("NewTypeID", Model.NewTypesSelectList, new { @class = "input-xlarge" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Заголовок</label>
            <div class="controls">
                @Html.TextBox("Header", Model.Header, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Header")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="IsMain">
                Главная</label>
            <div class="controls">
                <label class="checkbox">
                    @Html.CheckBox("IsMain", Model.IsMain) Выводить с картинками вверху
                </label>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Подзаголовок</label>
            <div class="controls">
                @Html.TextArea("SubHeader", Model.SubHeader, new { @class = "input-xlarge" })
                @Html.ValidationMessage("SubHeader")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Большая картинка</label>
            <div class="controls">
                <img src="@Model.FullPreviewPath" alt="avatar" id="PreviewImage" />
                <br />
                <div class="btn btn-danger" id="DeletePreview">
                    удалить
                </div>
                <div class="btn" id="ChangePreview">
                    загрузить фото
                </div>
            </div>
            @Html.ValidationMessage("PreviewPath")
        </div>
        <div class="control-group">
            <label class="control-label">
                Картинка в тексте</label>
            <div class="controls">
                <img src="@Model.FullAvatarTitlePath" alt="avatar" id="TitleImage" />
                <br />
                <div class="btn btn-danger" id="DeleteTitleImage">
                    удалить
                </div>
                <div class="btn" id="ChangeTitleImage">
                    загрузить фото
                </div>
            </div>
            @Html.ValidationMessage("TitlePath")
        </div>
        <div class="control-group">
            <label class="control-label">
                Текст</label>
            <div class="controls">
                @Html.ValidationMessage("Text")
                @Html.TextArea("Text", Model.Text, new { @class = "input-xlarge html-description" })
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
