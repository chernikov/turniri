@model turniri.Models.ViewModels.PhotoAlbumView
@{
    ViewBag.Title = Model.ID == 0 ? "Добавить фотоальбом" : "Изменить фотоальбом";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/edit-photos.js"></script>
}
<h2>@(Model.ID == 0 ? "Добавить фотоальбом" : "Изменить фотоальбом")</h2>
<p>
</p>
@using (Html.BeginForm("Edit", "PhotoAlbum", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("ID", Model.ID)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Наименование</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
            </div>
        </div>
       
        @if (Model.ID != 0)
        {
            <div class="control-group">
                <label class="control-label">
                    <div class="btn" id="AddPhoto">
                        Добавить фото
                    </div>
                </label>
            </div>
        }
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
@if (Model.ID != 0)
{
    @Html.Action("Photos", "PhotoAlbum", new { id = Model.ID }) 
}