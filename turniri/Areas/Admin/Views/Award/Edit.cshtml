@model turniri.Models.ViewModels.AwardView
@{
    ViewBag.Title = Model.ID == 0 ? "Добавление приза" : "Изменение приза";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    <script type="text/javascript" src="/Media/scripts/admin/edit-award.js"></script>
}
<h2>@(Model.ID == 0 ? "Добавление приза" : "Изменение приза")</h2>
<p></p>
@using (Html.BeginForm("Edit", "Award", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Hidden("_ID", Model._ID)
    @Html.Hidden("TournamentID", Model.TournamentID)
    @Html.Hidden("IconPath", Model.IconPath)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Наименование</label>
            <div class="controls">
                @Html.TextBox("Name", Model.Name, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Name")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Место</label>
            <div class="controls">
                @Html.TextBox("Place", Model.Place, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Place")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Кол-во очков</label>
            <div class="controls">
                @Html.TextBox("Point", Model.Point, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Point")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="IsSpecial">
                Специальный приз</label>
            <div class="controls">
                @Html.CheckBox("IsSpecial", Model.IsSpecial)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Золотой ТИ (процент от взноса)</label>
            <div class="controls">
                @Html.TextBox("MoneyGoldPercent", Model.MoneyGoldPercent, new { @class = "input-xlarge" })
                @Html.ValidationMessage("MoneyGoldPercent")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Белый ТИ</label>
            <div class="controls">
                @Html.TextBox("MoneyWood", Model.MoneyWood, new { @class = "input-xlarge" })
                @Html.ValidationMessage("MoneyWood")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Красный ТИ</label>
            <div class="controls">
                @Html.TextBox("MoneyCrystal", Model.MoneyCrystal, new { @class = "input-xlarge" })
                @Html.ValidationMessage("MoneyCrystal")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Иконка
            </label>
            <div class="controls">
                <img src="@Model.FullIconPath" alt="avatar" id="PreviewImage" />
                <br />
                <div class="btn btn-danger" id="DeletePreview">
                    удалить
                </div>
                <div class="btn" id="ChangePreview">
                    загрузить фото
                </div>
            </div>
            @Html.ValidationMessage("IconPath")
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Сохранить</button>
            @Html.ActionLink("Отменить", "Index", null, new { id = Model.TournamentID }, new { @class = "btn" })
        </div>
    </fieldset>
}
